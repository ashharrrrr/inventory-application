<html>
    <head>
        <title> Home </title>
    </head>
    <body>
        <nav>
            <h1>Inventory Application</h1>
        </nav>
        <% if (sortedByName) { %>
            <h2>
                Sorted by <%= sortedType %>: <%= sortedByName %>
                <% if (sortedType === 'Category') { %>
                    <a href="/categories/update/<%= sortedId %>"><button>Update</button></a>
                    <form action="/categories/delete/<%= sortedId %>" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                <% } else if (sortedType === 'Company') { %>
                    <a href="/companies/update/<%= sortedId %>"><button>Update</button></a>
                    <form action="/companies/delete/<%= sortedId %>" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                <% } %>
            </h2>
        <% } %>
        <%- include("partials/itemsList", { items: items }) -%>
    </body>
</html>
